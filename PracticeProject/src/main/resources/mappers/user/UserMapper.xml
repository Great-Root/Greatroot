<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.spring.practice.user.repository.IUserMapper">

	<resultMap id="UserMap" type="com.spring.practice.user.model.UserVO">
		<id property="account" column="account" />
		<result property="password" column="password" />
		<result property="nickname" column="nickname" />
		<result property="birthday" column="birthday" />
		<result property="email" column="email" />
		<result property="regDate" column="reg_date" />
		<result property="sessionId" column="session_id" />
		<result property="limitTime" column="limit_time" />
		<result property="authority" column="authority" />
		<result property="delDate" column="del_date" />
	</resultMap>
	
	<resultMap id="MailMap" type="com.spring.practice.board.model.MailVO">
		<id property="emailHash" column="email_hash"/>
		<result property="confirmNum" column="confirm_num"/>
		<result property="isConfirm" column="isconfirm"/>
		<result property="regDate" column="reg_date"/>
	</resultMap>
	
	<select id="checkEmail" resultType="int">
		SELECT COUNT(email)
		FROM practice_user
		WHERE email = #{email}
	</select>
	
	<delete id="deleteConfirmEmail">
		DELETE FROM mail_confirm WHERE email_hash=#{emailHash}
	</delete>
	
	<delete id="deleteOldData">
		<![CDATA[ DELETE FROM mail_confirm WHERE reg_date < #{limitDate}]]>
	</delete>
	
	<insert id="insertConfirmNum">
		INSERT INTO mail_confirm 
		(email_hash, confirm_num)
		VALUES (#{emailHash}, #{confirmNum})
	</insert>
	
	<update id="updateIsConfirm">
		UPDATE mail_confirm
		SET isconfirm = 1
		WHERE email_hash = #{emailHash}
	</update>
	
	<select id="selectConfirmNum" resultMap="MailMap">
		SELECT confirm_num FROM mail_confirm WHERE email_hash = #{emailHash}
	</select>
	
	<select id="selectIsConfirm" resultType="int">
		SELECT isconfirm FROM mail_confirm WHERE email_hash = #{emailHash}
	</select>

	<insert id="register">
		INSERT INTO practice_user
		(account, password, nickname, birthday, email)
		VALUES (#{account}, #{password}, #{nickname}, #{birthday, jdbcType=VARCHAR},#{email})
	</insert>
	
	<select id="checkAccount" resultType="int">
		SELECT COUNT(account)
		FROM practice_user
		WHERE account = #{account}
	</select>
	
	<select id="checkNickName" resultType="int">
		SELECT COUNT(nickname)
		FROM practice_user
		WHERE nickname = #{nickname}
	</select>
	
	<update id="updateAccount">
		UPDATE practice_user
		SET password = #{password},
			nickname = #{nickname},
			birthday = #{birthday, jdbcType=VARCHAR},
			email = #{email}
		WHERE account = #{account}
		
	</update>
	
	<update id="deleteAccount">
		UPDATE practice_user
		SET del_date = #{delDate}
		WHERE account = #{account}
	</update>
	
	<select id="getOneUserInfo" resultMap="UserMap">
		SELECT * FROM practice_user
		WHERE account = #{account}
	</select>
	
	<select id="getUserList" resultMap="UserMap">
		SELECT * FROM practice_user
	</select>
	
	<update id="keepLogin">
		UPDATE practice_user
		SET session_id = #{sessionId},
		limit_time = #{limitDate}
		WHERE account = #{account}
	</update>
	
	 <select id="getUserWithSessionId" resultMap="UserMap">
	 	SELECT * FROM practice_user
	 	WHERE session_id = #{sessionId}
	 </select>

</mapper>